@using static EscapeFromTarkov.Controllers.HomeController;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Данные о товарах";
}
@model PrivateAccViewModel
<section>
    <form asp-action="AdminPanelProduct" method="get">
        <div class="grid-main">
            <div class="grid-container-main">
                <div><a asp-action="AdminPanelBoss">Боссы</a></div>
                <div><a asp-action="AdminPanelCard">Карты</a></div>
                <div><a asp-action="AdminPanelWeapon">Оружие</a></div>
                <div><a asp-action="AdminPanelNPS">НПС</a></div>
                <div><a asp-action="AdminPanelProduct">Товары</a></div>
                <div><a asp-controller="swagger" asp-action="index.html">Swagger</a></div>
            </div>
            <div class="main-container">
                <table class="boss-table">
                    <tr>
                        <th colspan="3" style="font-size:25px;">Товары</th>
                    </tr>
                    <tr>
                        <th сolspan="1">Udid</th>
                        <th colspan="1">Название</th>
                        <th colspan="1">Цена</th>
                        <th colspan="1">Цена 24 часа</th>
                        @*<th>Изображение</th>*@
                    </tr>
                    @foreach (var boss in Model.Product)
                    {
                        <tr>
                            <td>@boss.Udid</td>
                            <td>@boss.Название</td>
                            <td>@boss.Цена</td>
                            <td>@boss.Цена24часа</td>
                            @*<td><img src="data:image/jpeg;base64,@Convert.ToBase64String(@boss.Изображение)" /></td>*@
                        </tr>
                    }
                </table>
            </div>
        </div>
    </form>
</section>